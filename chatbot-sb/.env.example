# ===================================
# EXAMPLE ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ===================================
# DATABASE CONFIGURATION
# ===================================
DB_URL=jdbc:postgresql://localhost:5432/myapp
DB_USERNAME=admin
DB_PASSWORD=your_database_password_here

# ===================================
# JWT SECURITY CONFIGURATION
# ===================================
# Generate a secure random key for production: openssl rand -hex 32
JWT_SECRET_KEY=your_secure_jwt_secret_key_minimum_32_characters_long
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000
JWT_ISSUER=chatbot-sb
JWT_COOKIE_NAME=refresh_token

# ===================================
# GROQ API CONFIGURATION
# ===================================
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TEMPERATURE=0.7

# ===================================
# PINECONE VECTOR DATABASE
# ===================================
# Get your credentials from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_PROJECT_ID=your_pinecone_project_id_here
PINECONE_INDEX_NAME=chatbot1
PINECONE_NAMESPACE=default
PINECONE_INITIALIZE_SCHEMA=true

# ===================================
# OLLAMA CONFIGURATION (Optional)
# ===================================
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large

# ===================================
# APPLICATION CONFIGURATION
# ===================================
# File upload limits
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB

# Document processing
DOCUMENTS_FOLDER_PATH=/user
PDF_CHUNK_SIZE=1000
PDF_CHUNK_OVERLAP=200

# Database settings
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# Logging levels (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_PINECONE=DEBUG

# ===================================
# PRODUCTION NOTES
# ===================================
# For production deployment:
# 1. Use strong, randomly generated passwords and secrets
# 2. Set JPA_DDL_AUTO=validate or none
# 3. Set JPA_SHOW_SQL=false
# 4. Set LOG_LEVEL_APP=INFO
# 5. Use environment-specific values for all configurations
# 6. Never commit actual API keys or passwords to version control
